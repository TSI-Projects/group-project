<Window x:Class="GW_UI.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Menu" Height="800" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Фон с изображением -->
        <Grid.Background>
            <ImageBrush ImageSource="Images/backgroung.jpg"/>
        </Grid.Background>

        <!-- Главное меню -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0">
            <!-- Кнопка Выполненные -->
            <Button Content="Выполненные" Style="{StaticResource ActionButtonStyle}" Width="300" Height="50" Margin="0,20"/>

            <!-- Кнопка Действующие -->
            <Button Content="Действующие" Style="{StaticResource ActionButtonStyle}" Width="300" Height="50" Margin="0,20"/>

            <!-- Кнопка Создать заказ -->
            <Button Content="Создать заказ" Style="{StaticResource ActionButtonStyle}" Width="300" Height="50" Margin="0,20"/>
        </StackPanel>

        <!-- Иконка настроек в верхнем левом углу -->
        <Button Width="50" Height="50" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="0" Background="Transparent">
            <!--Metro Icon add later "StackPanel >> uc: MenuButton"-->
        </Button>
    </Grid>
</Window>
